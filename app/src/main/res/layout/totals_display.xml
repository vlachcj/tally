<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".TotalsDisplay">

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scoreList"
        android:paddingBottom="120dp"
        android:clipToPadding="false">
    </ListView>


    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/addPlayerButton"
        android:text="add player"
        android:onClick="addPlayerClick"
        android:layout_alignBottom="@+id/scoreList"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/updateButton"
        android:text="+/-"
        android:onClick="updateScores"
        android:layout_alignBottom="@+id/scoreList"
        android:layout_alignRight="@+id/scoreList"
        android:layout_alignEnd="@+id/scoreList" />

</RelativeLayout>
